SELECT TP_NAME, TP_MEMBER, TP_RATION, TP_GENRE, TP_BRDCS, TP_COUNTRY, TP_CONTENT
FROM TVPROGRAM;

SELECT B.*, T.TP_NAME
FROM BOARD B, TVPROGRAM T
WHERE B.TP_ID = T.TP_ID
ORDER BY TP_BOARDID;

SELECT B.*, T.TP_NAME
FROM BOARD B, TVPROGRAM T
WHERE 1=1
AND
B.TP_ID = T.TP_ID
ORDER BY TP_BOARDID;

SELECT B.*, T.TP_NAME
FROM BOARD B, TVPROGRAM T
WHERE 1=1
AND
B.TP_ID = T.TP_ID
ORDER BY HIT;

SELECT B.*, T.TP_NAME
FROM BOARD B, TVPROGRAM T
WHERE 1=1
AND
B.TP_ID = T.TP_ID
ORDER BY B_REGDATE;



        